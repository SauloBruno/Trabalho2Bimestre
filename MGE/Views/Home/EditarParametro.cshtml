@model MGE.ViewModels.ParametrosEditViewModel

<div class="alert-danger" >
    @if (@Model.msgFail != null)
    {
        <p style="text-align: center;">@Model.msgFail</p>
    }
</div>

<h1>Edição de Parametro</h1>

<table class="table table-striped">

    <fieldset>
        <legend>Editar de Parametros</legend>
        <form method="post" asp-action="EditarParametro" asp-controller="Home" > 
            <input type="hidden" name="Ed" value="@Model.Id" />
                            
            <div class="form-group">
                <label for="ValorKwh">ValorKwh:</label>
                <input type="text" value="@Model.Parametro.ValorKwh" class="form-control" id="ValorKwh" name="ValorKwh" />
            </div>
                    
            <div class="form-group">
                <label for="FaixaConsumoAlto">FaixaConsumoAlto:</label>
                <input type="text" value="@Model.Parametro.FaixaConsumoAlto" class="form-control" id="FaixaConsumoAlto" name="FaixaConsumoAlto" />
            </div>
                    
            <div class="form-group">
                <label for="FaixaConsumoMedio">FaixaConsumoMedio:</label>
                <input type="text" value="@Model.Parametro.FaixaConsumoMedio" class="form-control" id="FaixaConsumoMedio" name="FaixaConsumoMedio" />
            </div>

            <div class="form-group">               
                <button type="submit" class="btn btn-primary" >Editar</button>
            </div>
        </form>
    </fieldset>

</table>